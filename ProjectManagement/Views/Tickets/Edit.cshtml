@model ProjectManagement.viewModels.TicketEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedProjectId" class="control-label"></label>
                <select asp-for="SelectedProjectId" class="form-control" asp-items="@(new SelectList(Model.Projects,"Id","Name"))"><option>-- Select Project --</option></select>
                <span asp-validation-for="SelectedProjectId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="SelectedStatusId" class="control-label"></label>
                <select asp-for="SelectedStatusId" class="form-control" asp-items="@(new SelectList(Model.Statuses,"Id","Name"))"><option>-- Select Status --</option></select>
                <span asp-validation-for="SelectedStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDeveloperId" class="control-label"></label>
                <select asp-for="SelectedDeveloperId" class="form-control" asp-items="@(new SelectList(Model.Developers,"Id","FullName"))"><option>-- Select Developer --</option></select>
                <span asp-validation-for="SelectedDeveloperId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
